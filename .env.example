# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
# Instructions: https://core.telegram.org/bots/tutorial
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Default user for messages when no recipient is specified
# Can be a chat ID (numeric) or username (with or without @)
# Chat IDs are more reliable as they don't require the user to have started your bot
TELEGRAM_DEFAULT_USER=your_default_chat_id_or_username

# Web interface port (optional, defaults to 3000)
WEB_PORT=3000
